%br 
#cars
  - if flash[:notice]
    .notice.alert.alert-warning
      %strong
        = flash[:notice]
  = simple_format(@car.brand)
  - if @car.assets.present?
    %h3 Images
    .assets
      - @car.assets.each do |asset|
        = image_tag(asset.asset.url, class: "img-rounded col-lg-4")
        %p
          = link_to File.basename(asset.asset.path), asset.asset.url
        %p
          %small
            = number_to_human_size(asset.asset.size)
= link_to 'Back', cars_path

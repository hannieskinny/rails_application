= form_for [@car, @comment] do |f|
  - if flash[:alert]
    .alert.alert-danger
      %strong
        = flash[:alert]
  %p
    = f.label :text
    %br
    = f.text_area :text, :class => "form-control"
  = f.submit "Create comment", :id => 'create-comment'
  %p
    = f.label :state_id
    = f.select :state_id, @states.map { |s| [s.name, s.id] }, :selected => @car.state_id
